{
  "name": "pad-challenge",
  "version": "1.0.0",
  "description": "Challenge tecnico para PDA",
  "author": "Alejandro Marzano",
  "license": "MIT",
  "scripts": {
    "start": "rimraf dist && parcel serve src/index.html --public-url / --dist-dir dist",
    "build": "parcel build src/index.html --public-url ./",
    "test": "npm run build"
  },
  "browserslist": [
    "defaults and supports es6-module",
    "maintained node versions"
  ],
  "type": "module",
  "alias": {
    "bootstrap": "/node_modules/bootstrap/dist/js/bootstrap.bundle.min.js",
    "progressbar": "/node_modules/progressbar.js/dist/progressbar.js",
    "splide": "/node_modules/@splidejs/splide/dist/js/splide.esm.js"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.7",
    "@splidejs/splide": "^4.1.4",
    "aos": "^2.3.4",
    "autoprefixer": "^10.4.14",
    "bootstrap": "^5.2.3",
    "lightningcss": "^1.19.0",
    "progressbar.js": "^1.1.0",
    "readme-md-generator": "^1.0.0",
    "rimraf": "^4.4.1"
  },
  "devDependencies": {
    "@parcel/transformer-sass": "^2.8.3",
    "parcel": "^2.8.3",
    "posthtml-include": "^1.7.4"
  }
}
