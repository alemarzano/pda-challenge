{
  "name": "pad-challenge",
  "version": "1.0.0",
  "description": "Challenge tecnico para PDA",
  "author": "Alejandro Marzano",
  "license": "MIT",
  "scripts": {
    "start": "parcel serve src/index.html --public-url / --dist-dir dist",
    "build": "parcel build src/index.html --public-url ./",
    "test": "npm run build"
  },
  "browserslist": [
    "defaults and supports es6-module",
    "maintained node versions"
  ],
  "type": "module",
  "alias": {
    "bootstrap": "_../../node_modules/bootstrap/dist/js_"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.7",
    "aos": "^2.3.4",
    "autoprefixer": "^10.4.14",
    "bootstrap": "^5.2.3",
    "lightningcss": "^1.19.0"
  },
  "devDependencies": {
    "@parcel/transformer-sass": "^2.8.3",
    "parcel": "^2.8.3",
    "posthtml-include": "^1.7.4"
  },
  "parcelOptions": {
    "@parcel/transformer-css": {
      "cssModules": true,
      "drafts": {
        "nesting": true,
        "customMedia": true
      },
      "pseudoClasses": {
        "focusVisible": "focus-ring"
      }
    }
  }
}
